{
  "files": ["lib/index.ts"],
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./lib",
    "outDir": "dist",
    "moduleResolution": "Node10",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "ignoreDeprecations": "5.0",
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true, 
    "noImplicitAny": true
  },
  "include": [
    "lib/**/*.spec.ts"
  ],
  "exclude": [
    "dist"
  ]
}