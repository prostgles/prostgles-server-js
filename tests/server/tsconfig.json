{
	"files": ["./index.ts"],
	"compilerOptions": {
		"target": "es2022",
		"lib": [ "es2022" ],
		"esModuleInterop" : true,
		"allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
		"allowJs": true,
		"module": "commonjs",
    "moduleResolution": "Node10",
		// "noUncheckedIndexedAccess": true,
		// "strict": true,
		// "strictNullChecks": true,
		"declaration": true,
		"declarationMap": true, 
		"ignoreDeprecations": "5.0",
		"skipLibCheck": true,
    "outDir": "dist",
	},
	"exclude": [
		"dist",
		"DBoGenerated.d.ts"
	]
}